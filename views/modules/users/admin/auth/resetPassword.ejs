<% layout('../../../../layouts/admin/auth') %>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/skins/flat/green.css') %>

<% script('https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.min.js') %>

<% block('title', 'Khôi phục mật khẩu') %>

<div class="card">
    <div class="card-body register-card-body">
        <p class="login-box-msg">Khôi phục mật khẩu</p>

        <form action="" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group has-feedback">
                <input type="password" class="form-control"
                       name="newPassword" placeholder="Mật khẩu mới">
                <span class="fa fa-lock form-control-feedback"></span>
                <span class="form__error-message"><%= __({ phrase: errors('newPassword') || ' ', locale: 'vi' }, __('user.info.password.new')) %></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control"
                       name="passwordConfirmation" placeholder="Nhập lại mật khẩu">
                <span class="fa fa-lock form-control-feedback"></span>
                <span class="form__error-message"><%= __({ phrase: errors('passwordConfirmation') || ' ', locale: 'vi' }, __('user.info.password.confirm')) %></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block btn-flat">Khôi phục</button>
        </form>
    </div>
</div>

<% block('scripts', `
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green',
            increaseArea: '20%' // optional
        });
    })
</script>
`) %>
