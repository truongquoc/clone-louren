<% layout('../../../../layouts/admin/auth') %>

<% block('title', 'Quên mật khẩu') %>

<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Quên mật khẩu</p>
        <p class="text-center"><small>Nhập email hoặc số điện thoại</small></p>
        <form action="" method="post">
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email"
                       name="email" value="<%= old('email') %>">
                <span class="fa fa-envelope form-control-feedback"></span>
                <span class="form__error-message"><%= errors('email') %></span>
            </div>
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Số điện thoại"
                       name="telephone" value="<%= old('telephone') %>">
                <span class="fa fa-phone form-control-feedback"></span>
                <span class="form__error-message"><%= errors('telephone') %></span>
            </div>
            <div class="row">
                <div class="col-8"></div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Gửi</button>
                </div>
            </div>
        </form>
    </div>
</div>
