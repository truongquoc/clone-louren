<% layout('/layouts/admin/app') %>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css') %>

<% script('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js') %>
<% script('https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js') %>

<% block('title', 'Yêu cầu') %>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yêu cầu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Simple Tables</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="float-left">
                    <h3 class="card-title card-title--float"></h3>
                </div>
                <div class="float-right">
                    <form action="" class="form-inline" method="get">
                        <div class="form-group">
                            <input type="text" class="form-control search-form__input" placeholder="Tìm kiếm theo email"
                                   name="search" value="<%= query.search || '' %>">
                            <button class="btn btn-primary search-form__btn"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered module__table"
                       data-approve-url="/admin/requests/approve" data-delete-url="/admin/requests/delete">
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Tiêu đề</th>
                        <th>Người gửi</th>
                        <th>Số điện thoại</th>
                        <th>Ngày gửi</th>
                        <th style="width: 120px">Tùy chọn</th>
                    </tr>
                    <% pageIndex = getPageIndex(query.page) %>
                    <% requests.docs.forEach(function (request, index) { %>
                    <tr data-key="<%= request._id %>">
                        <td><%= pageIndex + index + 1 %></td>
                        <td><%= request.title %></td>
                        <td><%= request.name %></td>
                        <td><%= request.telephone %></td>
                        <td><%= moment(request.createdAt).format('HH:mm DD/MM/YYYY') %></td>
                        <td>
                            <button class="badge bg-primary-gradient requests__view-btn"
                                    data-toggle="modal" data-target="#myModal"><i class="fa fa-eye"></i>
                            </button>
                            <% if (!request.isApproved) { %>
                                <button class="badge bg-success-gradient module__approve-btn">
                                    <i class="fa fa-check"></i>
                                </button>
                            <% } else { %>
                                <button class="badge bg-warning-gradient module__approve-btn">
                                    <i class="fa fa-check"></i>
                                </button>
                            <% } %>
                            <button class="badge bg-danger-gradient module__delete-btn">
                                <i class="fa fa-times"></i>
                            </button>
                            <div class="request__information hide">
                                <p class="request__title"><%= request.title %></p>
                                <p class="request__content"><%= request.content %></p>
                                <p class="request__name"><%= request.name %></p>
                                <p class="request__telephone"><%= request.telephone %></p>
                                <p class="request__email"><%= request.email %></p>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </table>
            </div>
            <div class="card-footer clearfix">
                <div class=" pagination-sm m-0 float-right">
                    <%- requests.renderPagination(requests, query.page) %>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered request__view-table">
                    <tbody>
                        <tr>
                            <th>Tiêu đề</th>
                            <td class="request__view__title"></td>
                        </tr>
                        <tr>
                            <th>Nội dung</th>
                            <td class="request__view__content"></td>
                        </tr>
                        <tr>
                            <th>Người gửi</th>
                            <td class="request__view__name"></td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td class="request__view__telephone"></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td class="request__view__email"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
