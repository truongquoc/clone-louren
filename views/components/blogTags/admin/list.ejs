<% layout('/layouts/admin/app') %>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css') %>
<% script('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js') %>
<% script('https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js') %>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Blog</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Simple Tables</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="float-left">
                    <h3 class="card-title card-title--float">Tags</h3>
                </div>
                <div class="float-right">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                        Tạo mới
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered sub-component__table" data-delete-url="/admin/blog/tags/delete">
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Tên</th>
                        <th>Đường dẫn</th>
                        <th>Ngày chỉnh sửa</th>
                        <th style="width: 120px">Tùy chọn</th>
                    </tr>
                    <% pageIndex = getPageIndex(page) %>
                    <% blogTags.docs.forEach(function (tag, index) { %>
                        <tr data-key="<%- tag._id %>">
                            <td><%- pageIndex + index + 1 %></td>
                            <td class="sub-component__table__name"><%- tag.name %></td>
                            <td class="sub-component__table__slug"><%- tag.slug %></td>
                            <td class="sub-component__table__update-time">
                                <%- moment(tag.updatedAt).format('HH:mm DD/MM/YYYY') %>
                            </td>
                            <td>
                                <button class="badge bg-warning-gradient sub-component__edit-btn"
                                        type="button" data-toggle="modal" data-target="#myModal2">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <button class="badge bg-danger-gradient sub-component__delete-btn">
                                    <i class="fa fa-times"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </table>
            </div>
            <div class="card-footer clearfix">
                <div class=" pagination-sm m-0 float-right">
                    <%- blogTags.renderPagination(blogTags, page) %>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thể loại mới</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form class="sub-component__create-form" action="/admin/blog/tags/create">
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control sub-component__form__name">
                        <p class="form__error-message sub-component__form__error-name"></p>
                    </div>
                    <div class="form-group">
                        <label>Đường dẫn</label>
                        <input type="text" class="form-control sub-component__form__slug">
                        <p class="form__error-message sub-component__form__error-slug"></p>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary float-right">Tạo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="myModal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Chỉnh sửa thể loại</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form class="sub-component__edit-form" action="/admin/blog/tags/edit">
                    <input type="hidden" class="sub-component__form__key">
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control sub-component__form__name">
                        <p class="form__error-message sub-component__form__error-name"></p>
                    </div>
                    <div class="form-group">
                        <label>Đường dẫn</label>
                        <input type="text" class="form-control sub-component__form__slug">
                        <p class="form__error-message sub-component__form__error-slug"></p>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary float-right">Chỉnh sửa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
