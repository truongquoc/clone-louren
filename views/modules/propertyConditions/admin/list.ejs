<% layout('/layouts/admin/app') %>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css') %>

<% script('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js') %>
<% script('https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js') %>

<% block('title', 'Bất động sản - Cơ sở vật chất') %>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Bất động sản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Simple Tables</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="float-left">
                    <h3 class="card-title card-title--float">Cơ sở vật chất</h3>
                </div>
                <div class="float-right">
                    <b class="temp-condition__total"><span><%= tempConditions.length %></span> được hiển thị</b>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                        Tạo mới
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered module__table"
                       data-approve-url="/admin/property/conditions/select" data-delete-url="/admin/property/conditions/delete">
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Tên</th>
                        <th>Icon</th>
                        <th>Ngày chỉnh sửa</th>
                        <th style="width: 120px">Tùy chọn</th>
                    </tr>
                    <% pageIndex = getPageIndex(query.page) %>
                    <% propertyConditions.docs.forEach(function (condition, index) { %>
                    <tr data-key="<%= condition._id %>">
                        <td><%= pageIndex + index + 1 %></td>
                        <td class="module__table__name"><%= condition.name %></td>
                        <td class="module__table__icon"><%= condition.icon %></td>
                        <td class="module__table__update-time">
                            <%= moment(condition.updatedAt).format('HH:mm DD/MM/YYYY') %>
                        </td>
                        <td>
                            <% if (tempConditions.indexOf(condition._id.toString()) >= 0) { %>
                                <button class="badge bg-warning-gradient module__approve-btn condition__approve-btn">
                                    <i class="fa fa-check"></i>
                                </button>
                            <% } else { %>
                                <button class="badge bg-success-gradient module__approve-btn condition__approve-btn">
                                    <i class="fa fa-check"></i>
                                </button>
                            <% } %>
                            <button class="badge bg-warning-gradient module__edit-btn"
                                    type="button" data-toggle="modal" data-target="#myModal2">
                                <i class="fa fa-pencil"></i>
                            </button>
                            <button class="badge bg-danger-gradient module__delete-btn">
                                <i class="fa fa-times"></i>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </table>
            </div>
            <div class="card-footer clearfix">
                <div class=" pagination-sm m-0 float-right">
                    <%- propertyConditions.renderPagination(propertyConditions, query.page) %>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Cơ sở vật chất mới</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form class="module__create-form" action="/admin/property/conditions/create">
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control module__form__name">
                        <p class="form__error-message module__form__error-name"></p>
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        <input type="text" class="form-control module__form__icon">
                        <p class="form__error-message module__form__error-icon"></p>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary float-right">Tạo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="myModal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Chỉnh sửa cơ sở vật chất</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form class="module__edit-form" action="/admin/property/conditions/edit">
                    <input type="hidden" class="module__form__key">
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control module__form__name">
                        <p class="form__error-message module__form__error-name"></p>
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        <input type="text" class="form-control module__form__icon">
                        <p class="form__error-message module__form__error-icon"></p>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary float-right">Chỉnh sửa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
