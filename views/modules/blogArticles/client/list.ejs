<% layout('/layouts/client/app') %>


<div class="sub-banner overview-bgi">
    <div class="overlay">
        <div class="container">
            <div class="breadcrumb-area">
                <h1>Properties Detail</h1>
                <ul class="breadcrumbs">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Properties Detail</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Blog body start -->
<div class="blog-body content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-xs-12">
                <!-- Blog box start -->
                <% if( articles.lenght === 0 ) { %>
                    <h3 class="title"><a href="blog-single-sidebar-right.html">No articles found</a></h3>
                <% } else { %>
                        <% articles.forEach(article => { %>

                <div class="thumbnail blog-box clearfix">
                    <img src="/public/client/img/blog/blog-3.jpg" alt="blog-3">
                    <!-- Detail -->
                    <div class="caption detail">
                        <div class="date-box">
                            <h5>03</h5>
                            <h5>May</h5>
                        </div>
                        <!-- title -->
                        <h3 class="title"><a href="blog-single-sidebar-right.html"> <%= article.title %> </a></h3>

                        <!-- Post meta -->
                        <div class="post-meta">
                            <span><a href="#"><i class="fa fa-user"></i> <%= article.author.name %> y</a></span>
                            <span><a><i class="fa fa-calendar "></i> <%= article.createdAt %> </a></span>
                            <span><a href="#"><i class="fa fa-bars"></i> The Nest</a></span>
                            <span><a href="#"><i class="fa fa-comments"></i>7 Comment</a></span>
                        </div>
                        <!-- paragraph -->
                        <p> <%= article.content %> </p>
                        <div class="clearfix"></div>
                        <!-- Btn -->
                        <a href="blog-single-sidebar-right.html" class="read-more">Read More...</a>
                    </div>
                </div>
            <% }); %>
            <% } %>
                <!-- Blog box end -->

                <!-- Page navigation start -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="blog-classic-sidebar-left.html" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        <li class="active"><a href="blog-classic-sidebar-right.html">1 <span class="sr-only">(current)</span></a></li>
                        <li><a href="blog-classic-sidebar-left.html">2</a></li>
                        <li><a href="blog-classic-fullwidth.html">3</a></li>
                        <li>
                            <a href="blog-classic-sidebar-left.html" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- Page navigation end -->
            </div>

            <div class="col-lg-4 col-md-4 col-xs-12">
                <div class="sidebar">
                    <div class="sidebar-widget search-box">
                        <form class="form-inline form-search" method="GET">
                            <div class="form-group">
                                <label class="sr-only" for="textsearch2">Search</label>
                                <input type="text" class="form-control" id="textsearch2" placeholder="Search">
                            </div>
                            <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <%- partial('../../../layouts/client/partials/sidebar') %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog body end -->