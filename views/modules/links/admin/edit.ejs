<% layout('../../../layouts/admin/app') %>

<% block('title', 'Liên kết') %>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Liên kết</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                    <li class="breadcrumb-item active">Liên kết</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sửa liên kết</h3>
            </div>
            <div class="card-body row" style="display: flex; justify-content: center;">
                <form class="blog-articles__form col-12 col-md-8" action="" method="POST">
                    <div class="form-group">
                        <label for="title">Tiêu đề</label>
                        <input type="text" class="form-control" value="<%= old('title', link.title) %>" name="title">
                        <p class="form__error-message form__title__error-message"><%= errors('title') %></p>
                    </div>
                    <div class="form-group">
                        <label for="url">Đường dẫn</label>
                        <input type="text" class="form-control" value="<%= old('url', link.url) %>" name="url">
                    </div>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </form>
            </div>
        </div>
    </div>
</section>