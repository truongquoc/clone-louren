<div class="xans-element- xans-estimate xans-estimate-userform ec-base-layer" style="width: 99.9%;">
    <div class="header">
        <h1>Thêm thông tin người mua</h1>
    </div>
    <div class="content">
        <h2>Thông tin người mua</h2>
        <div class="ec-base-table">
            <form action="" method="POST">
                <table border="1">
                    <colgroup>
                        <col style="width:150px">
                        <col style="width:auto">
                    </colgroup>
                    <tbody>
                    <tr>
                        <th scope="row">Tên người mua</th>
                        <td>
                            <input name="name" value="<% old('name') %>" type="text">
                            <p><%= errors('name') %></p>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Điện thoại di động</th>
                        <td>
                            <input name="telephone" value="<%= old('telephone') %>" type="text">
                            <p><%= errors('telephone') %></p>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>
                            <input name="email" value="<%= old('email') %>" type="text">
                            <p class="gBlank5"><%= errors('email') %></p>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Privacy policy</th>
                        <td>
                            <div class="agree">
