<% include partials/indexSearch.ejs %>

<!-- Featured properties start -->
<div class="content-area featured-properties">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1>Featured Properties</h1>
        </div>
        <ul class="list-inline-listing filters filters-listing-navigation">
            <li data-filter="1" class="btn btn-inline filtr-button filtr">All</li>
            <% propertyCategories.forEach(function (category, index) { %>
                <li data-filter="<%= index + 2 %>" class="btn btn-inline filtr-button filtr"><%= category.name %></li>
            <% }) %>
        </ul>
        <div class="row">
            <div class="filtr-container">
                <% propertyArticlesByCategories.forEach((propertyArticles, index) => { %>
                    <% propertyArticles.forEach((article) => { %>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 filtr-item" data-category="<%= index + 1 %>">
                            <div class="property">
                                <div class="property-img">
                                    <!--<div class="property-tag button alt featured">Featured</div>-->
                                    <div class="property-tag button sale"><%= article.status.name %></div>
                                    <div class="property-price"><%= article.price.display || 'Chưa cập nhật' %></div>
                                    <img src="<%= article.display.image %>" alt="fp" class="img-responsive lazyload">
                                    <div class="property-overlay">
                                        <a href="/bai-viet-<%= article.slug %>" class="overlay-link">
                                            <i class="fa fa-link"></i>
                                        </a>
                                        <div class="property-magnify-gallery">
                                            <% article.display.images.forEach((image, index) => { %>
                                                <a href="<%= image %>" class="<%= index === 0 ? 'overlay-link' : 'hidden' %>">
                                                    <% if (index === 0) { %>
                                                        <i class="fa fa-expand"></i>
                                                    <% } %>
                                                </a>
                                            <% }) %>
                                        </div>
                                    </div>
                                </div>
                                <div class="property-content">
                                    <h1 class="title">
                                        <a href="/bai-viet-<%= article.slug %>"><%= article.title %></a>
                                    </h1>
                                    <h3 class="property-address">
                                        <a href="/bai-viet-<%= article.slug %>">
                                            <i class="fa fa-map-marker"></i><%= article.address %>
                                        </a>
                                    </h3>
                                    <ul class="facilities-list clearfix">
                                        <li>
                                            <i class="flaticon-square-layouting-with-black-square-in-east-area"></i>
                                            <span>4800 sq ft</span>
                                        </li>
                                        <li>
                                            <i class="flaticon-bed"></i>
                                            <span>3 Beds</span>
                                        </li>
                                        <li>
                                            <i class="flaticon-monitor"></i>
                                            <span>TV </span>
                                        </li>
                                        <li>
                                            <i class="flaticon-holidays"></i>
                                            <span> 2 Baths</span>
                                        </li>
                                        <li>
                                            <i class="flaticon-vehicle"></i>
                                            <span>1 Garage</span>
                                        </li>
                                        <li>
                                            <i class="flaticon-building"></i>
                                            <span> 3 Balcony</span>
                                        </li>
                                    </ul>
                                    <div class="property-footer">
                                        <span class="left">
                                            <a><i class="fa fa-user"></i><%= article.author.name %></a>
                                        </span>
                                        <span class="right">
                                            <i class="fa fa-calendar"></i><%= moment(article.createdAt).fromNow() %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% }) %>
            </div>
        </div>
    </div>
</div>

