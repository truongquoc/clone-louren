<% layout('../../../layouts/client/app') %>

<% stylesheet('/public/client/css/style.css') %>

<% block('title', 'Trang chủ') %>

<div id="contents">
    <div class="fixed_row">

        <!-- 신상품 -->
        <div class="xans-element- xans-product xans-product-listmain-2 xans-product-listmain xans-product-2 ec-base-product widget_new_product">
            <div class="common_title">
                <div class="main_title">
                    <h3>
                        <span style="">NEW ARRIVAL</span>
                        <span style="display: none;"><img src="" alt="NEW ARRIVAL"/></span>
                    </h3>
                    <span class="desc"></span>
                </div>
            </div>
            <!-- /.common_title -->
            <ul class="prdList grid3 hover_fade">
                <% newestProducts.forEach((product) => { %>
                    <li class="item xans-record-">
                        <div class="box">
                            <div class="thumbnail">
                                <a href="/san-pham/<%= product.slug %>" class="thumb_link">
                                    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="
                                         data-src="<%= product.image.cover %>"
                                         alt="<%= product.name %>" class="lazyload thumb prevent-opacity"/>
                                </a>
                                <div class="custom_layer_btn">
                                    <ul>
                                        <li data-id="<%= product._id %>" class="cart shopping__icon add-to-cart-btn" title="Thêm vào giỏ hàng">
                                            <i class="fa fa-shopping-cart"></i>
                                        </li>
                                        <li class="wish_btn shopping__icon wish-btn" title="Yêu thích">
                                            <i class="fa fa-heart-o"></i>
                                        </li>
                                    </ul>
                                </div>
                                <!-- /.custom_layer_btn -->
                                <div class="like_button">
                                    <div class="likeButton">
                                        <button type="button" title="좋아요" class="rate">
                                            <i class="fa fa-star-o"></i>
                                            <strong><span>0</span></strong>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="description">
                                <strong class="name">
                                    <a href="/san-pham/<%= product.slug %>">
                                        <span class="product__name"><%= product.name %><br></span>
                                    </a>
                                </strong>
                                <ul class="xans-element- xans-product xans-product-listitem spec">
                                    <li class="xans-record-">
                                        <span class="product__price"><%= formatPrice(product.price.number) %> ₫</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>

    </div>

    <div class="fluid_row widget_instagram">
        <div class="instagram_title">
            <h3><i class="fa fa-instagram" aria-hidden="true"></i> INSTAGRAM</h3>
        </div>
        <div style="background-color:"
             class="xans-element- xans-instagramwidget xans-instagramwidget-display-1 xans-instagramwidget-display xans-instagramwidget-1 widget typeGrid">
            <h2><a target="_blank" class="widget-title"></a></h2>
            <strong class="idTag ">
                <a target="_blank" href=""
                   class="widget-id-tag xans-record-"></a>
            </strong>
            <div class="thumb  fadeOut slide" style=""></div>
        </div>
    </div>
</div>
