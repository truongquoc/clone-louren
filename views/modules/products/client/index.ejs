<% layout('../../../layouts/client/app') %>

<% stylesheet('/public/client/css/style.css') %>
<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css') %>
<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css') %>

<% script('https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js') %>

<% block('stylesheets', `
<style>
.slick-slide img {
    width: 100%;
}

.slick-arrow {
    z-index: 100;
}
</style>
`) %>

<% block('title', 'Trang chủ') %>

<div id="contents" class="homepage">
    <div class="fixed_row">
        <% if (discountedProducts.length) { %>
            <div class="xans-element- xans-product xans-product-listmain-2 xans-product-listmain xans-product-2 ec-base-product widget_new_product">
                <div class="common_title">
                    <div class="main_title">
                        <h3>
                            <span style="">ITEMS ON SALE</span>
                        </h3>
                        <span class="desc"></span>
                    </div>
                </div>
                <ul class="prdList grid3 hover_zoom row d-flex m-0">
                    <% discountedProducts.forEach((product) => { %>
                    <li class="item xans-record- col-6 col-md-4 mx-0">
                        <div class="box">
                            <div class="thumbnail">
                                <a href="/san-pham/<%= product.slug %>" class="thumb_link">
                                    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="
                                         data-src="<%= product.image.cover %>"
                                         alt="<%= product.name %>" class="lazyload thumb prevent-opacity"/>
                                </a>
                                <div class="custom_layer_btn">
                                    <ul>
                                        <% if (!product.price.isAgreement) { %>
                                        <li data-id="<%= product._id %>"
                                            class="cart shopping__icon add-to-cart-btn" title="Thêm vào giỏ hàng">
                                            <i class="fa fa-shopping-cart"></i>
                                        </li>
                                        <% } else { %>
                                        <li class="cart shopping__icon telephone__text">
                                            Liên hệ
                                        </li>
                                        <% } %>

                                        <!-- <li class="wish_btn shopping__icon wish-btn" title="Yêu thích">
                                            <i class="fa fa-heart-o"></i>
                                        </li> -->
                                    </ul>
                                </div>
                                <% if (!product.price.isAgreement && product.discount > 0) { %>
                                    <span class="price dc_price checked"><%= product.discount * 100 %><em>%</em></span>
                                <% } %>
                                <!-- /.custom_layer_btn -->
                                <!-- <div class="like_button">
                                    <div class="likeButton">
                                        <button type="button" title="Bình chọn" class="rate">
                                            <i class="fa fa-star-o"></i>
                                            <strong><span>0</span></strong>
                                        </button>
                                    </div>
                                </div> -->
                            </div>
                            <div class="description">
                                <strong class="name">
                                    <a href="/san-pham/<%= product.slug %>">
                                        <span class="product__name"><%= product.name %><br></span>
                                    </a>
                                </strong>
                                <ul class="xans-element- xans-product xans-product-listitem spec">
                                    <li class="xans-record-">
                                        <% if (product.price.isAgreement) { %>
                                        Liên hệ: <%= info.phone %>
                                        <% } else { %>
                                        <span class="priceDisplay"></span>
                                        <input class="priceValue"
                                               value="<%= product.price.number %>"
                                               type="hidden"/>
                                        <span class="price dc_price priceDiscountText">
                                                        <i class="fa fa-long-arrow-down"
                                                           aria-hidden="true"></i>
                                                        <span class="priceDiscountPercent"></span>
                                                    </span>
                                        <input class="priceDiscount"
                                               value="<%= product.discount %>"
                                               type="hidden"/>
                                        <% } %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <% }) %>
                </ul>
                <div class="text-center">
                    <a href="/mat-hang/giam-gia" class="text__read-more">Xem thêm <i class="fa fa-angle-double-right"></i></a>
                </div>
            </div>
        <% } %>
        <div class="xans-element- xans-product xans-product-listmain-2 xans-product-listmain xans-product-2 ec-base-product widget_new_product">
            <div class="common_title">
                <div class="main_title">
                    <h3>
                        <span style="">LATEST PRODUCTS</span>
                    </h3>
                    <span class="desc"></span>
                </div>
            </div>
            <ul class="prdList grid3 hover_zoom row d-flex m-0">
                <% newestProducts.forEach((product) => { %>
                    <li class="item xans-record- col-6 col-md-4 mx-0">
                        <div class="box">
                            <div class="thumbnail">
                                <a href="/san-pham/<%= product.slug %>" class="thumb_link">
                                    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="
                                         data-src="<%= product.image.cover %>"
                                         alt="<%= product.name %>" class="lazyload thumb prevent-opacity"/>
                                </a>
                                <div class="custom_layer_btn">
                                    <ul>
                                        <% if (!product.price.isAgreement) { %>
                                            <li data-id="<%= product._id %>"
                                                class="cart shopping__icon add-to-cart-btn" title="Thêm vào giỏ hàng">
                                                <i class="fa fa-shopping-cart"></i>
                                            </li>
                                        <% } else { %>
                                            <li class="cart shopping__icon telephone__text">
                                                Liên hệ
                                            </li>
                                        <% } %>

                                        <!-- <li class="wish_btn shopping__icon wish-btn" title="Yêu thích">
                                            <i class="fa fa-heart-o"></i>
                                        </li> -->
                                    </ul>
                                </div>
                                <% if (!product.price.isAgreement && product.discount > 0) { %>
                                    <span class="price dc_price checked"><%= product.discount * 100 %><em>%</em></span>
                                <% } %>
                                <!-- /.custom_layer_btn -->
                                <!-- <div class="like_button">
                                    <div class="likeButton">
                                        <button type="button" title="Bình chọn" class="rate">
                                            <i class="fa fa-star-o"></i>
                                            <strong><span>0</span></strong>
                                        </button>
                                    </div>
                                </div> -->
                            </div>
                            <div class="description">
                                <strong class="name">
                                    <a href="/san-pham/<%= product.slug %>">
                                        <span class="product__name"><%= product.name %><br></span>
                                    </a>
                                </strong>
                                <ul class="xans-element- xans-product xans-product-listitem spec">
                                    <li class="xans-record-">
                                        <% if (product.price.isAgreement) { %>
                                            Liên hệ: <%= info.phone %>
                                        <% } else { %>
                                            <span class="priceDisplay"></span>
                                            <input class="priceValue"
                                                   value="<%= product.price.number %>"
                                                   type="hidden"/>
                                            <span class="price dc_price priceDiscountText">
                                                    <i class="fa fa-long-arrow-down"
                                                       aria-hidden="true"></i>
                                                    <span class="priceDiscountPercent"></span>
                                                </span>
                                            <input class="priceDiscount"
                                                   value="<%= product.discount %>"
                                                   type="hidden"/>
                                        <% } %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                <% }) %>
            </ul>
            <div class="text-center">
                <% if (newestProducts.length) { %>
                    <a href="/mat-hang" class="text__read-more">Xem thêm <i class="fa fa-angle-double-right"></i></a>
                <% } else { %>
                    <strong class="warning text__no-products">Không có sản phẩm nào được tìm thấy. </strong>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% block('scripts', `
<script>
$(document).ready(function () {
    var owl = $('.owl-carousel');
    owl.owlCarousel({
        items:1,
        loop:true,
        margin:10,
        autoplay:true,
        autoplayTimeout:5000,
        lazyLoad: true,
        autoplayHoverPause:true,
    });
    $('.play').on('click',function(){
        owl.trigger('play.owl.autoplay',[1000])
    })
    $('.stop').on('click',function(){
        owl.trigger('stop.owl.autoplay')
    })
});
</script>
`) %>
