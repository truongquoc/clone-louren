<% layout('/layouts/admin/app') %>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/skins/flat/green.css') %>
<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.css') %>

<% script('https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.min.js') %>
<% script('https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.4/sweetalert2.min.js') %>

<% block('title', 'Đăng ký') %>

<div class="register-box">
    <div class="register-logo">
        <a href="/admin"><b>Admin</b>LTE</a>
    </div>
    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Đăng ký thành viên</p>

            <form action="" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group has-feedback">
                    <input type="password" class="form-control"
                           name="password" placeholder="Mật khẩu hiện tại">
                    <span class="fa fa-lock form-control-feedback"></span>
                    <span class="form__error-message"><%= errors('password') %></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control"
                           name="newPassword" placeholder="Mật khẩu mới">
                    <span class="fa fa-lock form-control-feedback"></span>
                    <span class="form__error-message"><%= errors('newPassword') %></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control"
                           name="passwordConfirmation" placeholder="Nhập lại mật khẩu">
                    <span class="fa fa-lock form-control-feedback"></span>
                    <span class="form__error-message"><%= errors('passwordConfirmation') %></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng ký</button>
            </form>
        </div>
    </div>
</div>

<% block('scripts', `
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green',
            increaseArea: '20%' // optional
        });
        ${flashMessages && flashMessages.success} ? swal('Thành công!', '', 'success') : '';
    })
</script>
`) %>
